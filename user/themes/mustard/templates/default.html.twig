{% for p in page.find('/categories').children  %}
{% if p.url == '/categories/'~post %}
{{ p.title }}
{% endif %}
{% endfor %}
</a>
{% endfor %}
 </p>
{% endif %}
{% if page.header.pdate %}
<p class="alert alert-title" style="color:black;"> نوشته شده 
در {{page.header.pdate|e}} </p>
{% endif %}
</div>
