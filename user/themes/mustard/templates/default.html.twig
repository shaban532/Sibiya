{% extends 'partials/base.html.twig' %}
{% block content %}
<div class="container container-small-white">
<h1 class="alert alert-title" style="color:black;"> {{ page.title }} </h1>

{% if page.taxonomy.category %}
<p class="alert alert-background" style="color:black; text-align:right"> دسته‌بندی:
{% for post in page.taxonomy.category %}
 <a href="/categories/{{post}}">
{% for p in page.find('/categories').children  %}
{% if p.url == '/categories/'~post %}
{{ p.title }}
{% endif %}
{% endfor %}
</a>
{% endfor %}
 </p>
{% endif %}

 <div style=" text-align: justify; text-justify: inter-word;">
        {{ page.content|raw }}
{% if page.taxonomy.category %}
<p class="alert alert-background" style="color:black; text-align:right"> دسته‌بندی:
